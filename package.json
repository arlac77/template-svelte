{
  "keywords": [
    "svelte"
  ],
  "devDependencies": {
    "rollup-plugin-svelte": "git+https://github.com/ctavan/rollup-plugin-svelte.git#handle-missing-exports-gracefully",
    "svelte": "^3.24.1"
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-rollup",
      "arlac77/template-github-action"
    ],
    "mergers": [
      {
        "type": "Skip",
        "pattern": "ci.yml"
      },
      {
        "type": "Readme",
        "pattern": "README.md",
        "options": {
          "badges": [
            {
              "name": "Svelte v3",
              "icon": "https://img.shields.io/badge/svelte-v3-orange.svg",
              "url": "https://svelte.dev",
              "order": 0.05
            }
          ]
        }
      }
    ],
    "usedBy": [
      "arlac77/template-svelte-app",
      "arlac77/template-svelte-component"
    ]
  }
}
